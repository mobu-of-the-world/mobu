{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>kachick/renovate-config-dprint"
  ],
  "labels": ["dependencies", "renovate", "automerge"],
  "automerge": true,
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": [".node-version"],
      "matchStrings": ["^v(?<currentValue>.+?)\\n"],
      "depNameTemplate": "nodejs/node",
      "datasourceTemplate": "github-tags",
      "extractVersionTemplate": "^v(?<version>\\S+)"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["nodejs/node"],
      "allowedVersions": "/^v?18\\./"
    }
  ]
}
